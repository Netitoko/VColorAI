<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.vcolorai">

    <!-- ================== PERMISSIONS ================== -->

    <!-- Интернет (Firebase, ImgBB) -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Камера -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Доступ к файлам (для фото с камеры) -->
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <!-- Говорим системе, что камера НЕ обязательна -->
    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <!-- ================== APPLICATION ================== -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VColorAI"
        tools:targetApi="31">

        <!-- Splash -->
        <activity
            android:name=".data.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Auth -->
        <activity android:name=".ui.auth.LoginActivity" />
        <activity android:name=".ui.auth.RegisterActivity" />
        <activity android:name=".data.GuestActivity" />
        <activity android:name=".ui.auth.ChooseAccountActivity" />

        <!-- Main -->
        <activity
            android:name=".data.MainActivity"
            android:exported="false" />

        <!-- Reset password -->
        <activity
            android:name=".ui.auth.ResetPasswordActivity"
            android:exported="true"
            android:launchMode="singleTask">

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="https"
                    android:host="vcolorai-a9616.firebaseapp.com"
                    android:pathPrefix="/__/auth" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="https"
                    android:host="vcolorai-a9616.web.app"
                    android:pathPrefix="/__/auth" />
            </intent-filter>
        </activity>

        <!-- ================== FILE PROVIDER ================== -->

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

    </application>

</manifest>
