<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.publicfeed.PublicFeedFragment">

    <!-- Верхняя полоска с названием -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:background="?attr/colorSurface"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvFeedTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Лента"
            android:textSize="18sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Контент под верхней полоской -->
    <LinearLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="56dp">

        <!-- Поиск -->
        <LinearLayout
            android:id="@+id/searchContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Поиск по ленте"
                android:padding="8dp"
                android:backgroundTint="?attr/colorOutline"/>

            <ImageButton
                android:id="@+id/btnFilter"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more_vert"
                android:tint="?attr/colorOnSurface"
                android:contentDescription="Фильтры"/>
        </LinearLayout>

        <!-- ✅ OFFLINE BANNER -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/offlineBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="?attr/colorOutline"
            app:cardBackgroundColor="?attr/colorSurface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="12dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_warning"
                    android:tint="?attr/colorOnSurface"
                    android:contentDescription="Нет интернета"/>

                <TextView
                    android:id="@+id/tvOfflineText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="1"
                    android:text="Нет подключения к интернету. Показаны сохранённые данные."
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- RecyclerView с лентой -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFeed"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            tools:listitem="@layout/item_public_feed_palette"/>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
