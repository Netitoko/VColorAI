<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Текущий пароль -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Для безопасности введите текущий пароль"
            android:textSize="14sp"
            android:layout_marginBottom="6dp" />

        <EditText
            android:id="@+id/etCurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Текущий пароль"
            android:inputType="textPassword" />

        <!-- Забыли пароль -->
        <TextView
            android:id="@+id/tvForgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Забыли пароль?"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_marginTop="6dp"
            android:visibility="gone" />

        <!-- Новый пароль -->
        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:hint="Новый пароль"
            android:inputType="textPassword" />

        <!-- Требования (как при регистрации) -->
        <LinearLayout
            android:id="@+id/passwordRequirements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/tvReqLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Минимум 6 символов"
                android:textSize="13sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/tvReqUppercase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Хотя бы одна заглавная буква"
                android:textSize="13sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/tvReqNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Хотя бы одна цифра"
                android:textSize="13sp"
                android:textColor="#888888" />

            <TextView
                android:id="@+id/tvReqSpecial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Хотя бы один спецсимвол"
                android:textSize="13sp"
                android:textColor="#888888" />
        </LinearLayout>

        <!-- Подтверждение нового пароля -->
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Подтвердите новый пароль"
            android:inputType="textPassword"
            android:layout_marginBottom="12dp" />

        <!-- Отправить код -->
        <Button
            android:id="@+id/btnSendPasswordCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Отправить код" />

        <!-- Код подтверждения -->
        <EditText
            android:id="@+id/etPasswordCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Код из письма"
            android:inputType="number"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnConfirmPasswordChange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Подтвердить"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
