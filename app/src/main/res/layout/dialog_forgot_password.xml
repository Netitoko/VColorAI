<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/btnSendCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Отправить код" />

        <EditText
            android:id="@+id/etCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="Код из письма"
            android:inputType="number"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnConfirmCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Подтвердить код"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnPasteLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Вставить ссылку из письма"
            android:visibility="gone"
            android:layout_marginTop="8dp"/>


        <!-- Если захочешь вариант B (ввод нового пароля в приложении) — поля уже готовы -->
        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Новый пароль"
            android:inputType="textPassword"
            android:visibility="gone" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Подтвердите пароль"
            android:inputType="textPassword"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnSetNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Установить новый пароль"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
