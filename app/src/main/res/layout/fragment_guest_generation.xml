        android:layout_height="wrap_content"
        android:text="Ð˜Ð´Ñ‘Ñ‚ Ð³ÐµÐ½ÐµÑ€Ð°Ñ†Ð¸Ñ..."
        android:textSize="16sp"
        android:padding="8dp"
        android:visibility="gone"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintTop_toTopOf="parent"
